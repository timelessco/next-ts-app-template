{
  "name": "next-react-app",
  "version": "2.0.0",
  "private": true,
  "description": "Personal Next React App",
  "keywords": [
    "react",
    "next-react-app",
    "typescript"
  ],
  "bugs": {
    "url": "https://github.com/navin-moorthy/next-react-app/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/navin-moorthy/next-react-app.git"
  },
  "license": "MIT",
  "author": "Navin Moorthy <navin007.a@gmail.com>",
  "scripts": {
    "postinstall": "concurrently \"husky install\" \"patch-package\"",
    "dev": "next dev",
    "test": "jest --watch --watchAll=false",
    "test:ci": "jest --ci",
    "lint": "next lint",
    "lint:fix": "eslint --color --ext .js,.jsx,.ts,.tsx . --fix",
    "format": "prettier --check \"./**/*.{html,css,js,jsx,ts,tsx,md,json}\"",
    "format:fix": "prettier --write --list-different --cache \"./**/*.{html,css,js,jsx,ts,tsx,md,json}\"",
    "format:package": "sort-package-json package.json",
    "build": "next build",
    "start": "next start",
    "release": "release-it",
    "postpublish": "pinst --enable",
    "size": "yarn build && size-limit",
    "commit": "gacp",
    "contributors:add": "all-contributors add",
    "contributors:generate": "all-contributors generate"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "lint-staged": {
    "**/*.{js,jsx,tx,tsx}": [
      "yarn lint:fix"
    ],
    "**/*.{html,css,js,jsx,ts,tsx,md,json}": [
      "yarn format:fix"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "dependencies": {
    "next": "12.2.5",
    "react": "18.2.0",
    "react-dom": "18.2.0"
  },
  "devDependencies": {
    "@babel/core": "7.20.12",
    "@commitlint/cli": "17.4.2",
    "@commitlint/config-conventional": "17.4.2",
    "@next/eslint-plugin-next": "12.3.4",
    "@release-it/conventional-changelog": "5.1.1",
    "@testing-library/dom": "8.20.0",
    "@testing-library/jest-dom": "5.16.5",
    "@testing-library/react": "13.4.0",
    "@testing-library/user-event": "14.4.3",
    "@types/jest": "28.1.8",
    "@types/node": "18.11.18",
    "@types/react": "18.0.27",
    "@types/react-dom": "18.0.10",
    "all-contributors-cli": "6.24.0",
    "autoprefixer": "10.4.13",
    "babel-jest": "28.1.3",
    "concurrently": "7.6.0",
    "eslint": "8.32.0",
    "eslint-config-prettier": "8.6.0",
    "eslint-config-react-app": "7.0.1",
    "eslint-plugin-prettier": "4.2.1",
    "eslint-plugin-simple-import-sort": "7.0.0",
    "gacp": "3.0.3",
    "husky": "8.0.3",
    "jest": "28.1.3",
    "jest-environment-jsdom": "28.1.3",
    "lint-staged": "13.1.0",
    "patch-package": "6.5.1",
    "pinst": "3.0.0",
    "postcss": "8.4.21",
    "prettier": "2.8.3",
    "release-it": "15.6.0",
    "sort-package-json": "1.57.0",
    "tailwindcss": "3.2.4",
    "typescript": "4.9.4"
  },
  "gacp": {
    "add": false,
    "push": false,
    "emoji": "emoji",
    "editor": false
  }
}
